{
  "name": "nested-markdown",
  "version": "0.0.8",
  "description": "React renderer for extended markdown with inline nested markdown blocks.",
  "keywords": [
    "react",
    "markdown",
    "react-markdown",
    "remark-gfm",
    "rehype",
    "nested-markdown",
    "nested-md",
    "renderer"
  ],
  "license": "MIT",
  "author": "Shuo Feng",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shuo-s-feng/nested-markdown.git"
  },
  "bugs": {
    "url": "https://github.com/shuo-s-feng/nested-markdown/issues"
  },
  "homepage": "https://github.com/shuo-s-feng/nested-markdown#readme",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "MANUAL.md"
  ],
  "scripts": {
    "build": "tsup",
    "docs": "cd examples && vite build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "chroma-js": "^3.1.2",
    "marked": "^12.0.0",
    "mermaid": "^11.12.2",
    "react-markdown": "^9.0.0",
    "rehype-raw": "^6.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@types/chroma-js": "^2.4.4",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.1.8"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
